<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bigeny.Views.DialogElements.MessagePreview">
    <Frame x:Name="message_frame" Style="{StaticResource BigenyCard}" CornerRadius="25" Margin="10" MinimumWidthRequest="50" Padding="20,10,20,10" HasShadow="False">
        <StackLayout>
            <Label x:Name="from_label" Style="{StaticResource BigenyNameLabel}" FontSize="18"/>
            <Label x:Name="message_label" Style="{StaticResource BigenyLabel}" FontSize="20"/>
            <Label x:Name="time_label" HorizontalOptions="End" Style="{StaticResource BigenyLabel}" FontSize="16"/>
        </StackLayout>
    </Frame>
</ContentView>